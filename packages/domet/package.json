{
  "name": "domet",
  "description": "A React hook for scroll tracking with smooth 60fps performance and smart hysteresis",
  "version": "1.0.3",
  "author": "blksmr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blksmr/domet.git"
  },
  "homepage": "https://domet.blksmr.com",
  "bugs": {
    "url": "https://github.com/blksmr/domet/issues"
  },
  "keywords": [
    "react",
    "scroll",
    "scroll-spy",
    "scrollspy",
    "hooks",
    "navigation",
    "active-section"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.mjs",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/es/index.d.mts",
        "default": "./dist/es/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./useDomet": {}
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "bunchee -w",
    "build": "bunchee prepare && bunchee",
    "lint": "biome check --fix --unsafe . --verbose",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^2.1.8",
    "jsdom": "^25.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "bunchee": "^6.6.0",
    "typescript": "^5.8.3",
    "vite": "^5.4.21",
    "vitest": "^2.1.8"
  }
}
