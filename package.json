{
  "name": "domet",
  "private": true,
  "version": "1.0.0",
  "description": "A lightweight scroll spy hook for React",
  "type": "module",
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "prepare": "husky",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "start": "cd website && npm run start",
    "build:dev": "turbo run build:dev",
    "documentation": "npx tsx scripts/documentation.ts",
    "publish": "npm run build && npm publish --workspace=packages/domet"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "husky": "^9.1.7",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  }
}
